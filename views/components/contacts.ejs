.contact-method-card {
  padding: 25px 30px;
  border-radius: 18px;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  height: 100%;
}
.contact-method-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
}
.contact-method-card h5 {
  font-weight: 500;
}

/* Card Colors */
.red-card {
  background-color: #e75967;
}
.green-card {
  background-color: #67df91; /* Lighter pleasant green */
}
.gray-card {
  background-color: #6fb4e9;
}

/* Co-founder Section */

.cofounder-section {
  background-color: #f9eded;
}
/* Heading Styling */
.cofounder-heading {
  font-size: 2.5rem;
  font-weight: bold;
}

.text-red {
  color: #e75967;
}

.text-black {
  color: #000;
}

/* Card Styling */
.cofounder-card {
  background: #f57986;
  border-radius: 12px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  text-align: center;
  color: #000;
  height: 500px;
  max-width: 450px;
  
}

.cofounder-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
}

.founder-name {
  font-size: 1.1rem;
  font-weight: 500;
  margin: 0;
}

/* Responsive image */
.cofounder-card img {
  height: 420px;
  object-fit: cover;
  width: 100%;
}

</style>
