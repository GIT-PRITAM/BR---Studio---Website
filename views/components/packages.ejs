<% layout("/layouts/boilerplate") %>

<section class="offer-wrapper py-5">
  <div class="container">
    <div class="row gx-5">
      <!-- Left Section - Vertically Centered OFFER -->
      <div class="col-md-3 d-flex flex-column justify-content-center text-md-start text-center mb-4 mb-md-0">
        <h1 class="offer-title text-danger">OFFER</h1>
        <p class="offer-subtext fs-5">BOOKING OPEN 2025-26</p>
      </div>

      <!-- Right Section -->
      <div class="col-md-9">
        <!-- Main Heading -->
        <div class="row">
          <div class="col-12">
            <div class="special-heading shadow px-4 py-3">
              <h3 class="mb-1">SPECIAL WEDDING</h3>
              <p class="mb-0 small">Best Package</p>
            </div>
          </div>
        </div>

        <!-- 3 Cards -->
        <div class="row g-4 shadow rounded p-3 bg-white">
          <!-- Book Now Card -->
          <div class="col-md-4">
            <div class="card h-100 text-center glass-card transition-card">
              <div class="card-body d-flex flex-column justify-content-between">
                <div>
                  
                  <p class="text-dark px-2">
                    Book now by clicking on the links in front of the paragraph 
                  </p>
                </div>
                <div>
                  <h6 class="fw-bold text-dark mt-3">Specialist in</h6>
                  <ul class="list-unstyled offer-benefits mb-3">
                    <li>• PRE WEDDING SHOOT</li>
                    <li>• WEDDING SHOOT</li>
                    <li>• EVENT SHOOT</li>
                    <li>• BABY SHOOT</li>
                    <li>• ADVERTISEMENT SHOOT</li>
                    <li>• SOCIAL MEDIA SHOOT</li>
                  </ul>
                  <div class="offer-price-note">
                    <p class="m-0">wedding package<br>starting at</p>
                    <h6 class="fw-bold">Only - 29,999</h6>
                  </div>
                    <a href="/contacts" class="btn btn-book px-4 py-2 rounded-pill mb-3">Book Now</a>
                </div>
              </div>
            </div>
          </div>

          <!-- Image Card 1 -->
          <div class="col-md-4">
            <div class="card h-100 glass-card transition-card">
              <img src="/images/DSC_8113.jpg" class="card-img-top img-fluid rounded" alt="Wedding Image 1">
            </div>
          </div>

          <!-- Image Card 2 -->
          <div class="col-md-4">
            <div class="card h-100 glass-card transition-card">
              <img src="/images/IMG_0258 (1).jpg" class="card-img-top img-fluid rounded" alt="Wedding Image 2">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Packages Section -->
<section class="packages-section">
  <div class="container">
    <h2 class="text-center mb-5 fw-bold">OUR <span style="color: #d32d2d;">PACKAGES</span></h2>
    <div class="row g-4">
      <!-- Silver Package -->
      <div class="col-md-4">
        <div class="card package-card silver-card shadow">
          <div class="package-image-wrapper">
            <img src="/images/DSC_8113.jpg" alt="Silver Package" class="package-image">
          </div>
          <div class="package-content">
            <div class="package-title">Silver Package</div>
            <div class="package-amount">₹69,999</div>
            <p class="package-benefit">✓ Both-side full coverage</p>
            <p class="package-benefit">✓ Pre wedding Shoot</p>
            <p class="package-benefit">✓ Album with 150-200 photos</p>
            <p class="package-benefit">✓ Cinematic video + Teaser</p>
            <p class="package-benefit">✓ 100+ Edited photo</p>
            <p class="package-benefit">✓ One special gift</p>
          </div>
        </div>
      </div>

      <!-- Gold Package -->
      <div class="col-md-4">
        <div class="card package-card gold-card shadow">
          <div class="package-image-wrapper">
            <img src="/images/bithi.jpg" alt="Gold Package" class="package-image">
          </div>
          <div class="package-content">
            <div class="package-title">Golden Package</div>
            <div class="package-amount">₹89,999</div>
            <p class="package-benefit">✓ Both-side full coverage</p>
            <p class="package-benefit">✓ Pre wedding shoot</p>
            <p class="package-benefit">✓ Full drone coverage</p>
            <p class="package-benefit">✓ Album with 250-300 photos</p>
            <p class="package-benefit">✓ Cinematic vidoe + Teaser + Reels</p>
            <p class="package-benefit">✓ 150+ Edited photo</p>
            <p class="package-benefit">✓ Two special gift</p>
          </div>
        </div>
      </div>

      <!-- Platinum Package -->
      <div class="col-md-4">
        <div class="card package-card platinum-card shadow">
          <div class="package-image-wrapper">
            <img src="/images/IMG_0258 (1).jpg" alt="Platinum Package" class="package-image">
          </div>
          <div class="package-content">
            <div class="package-title">Platinum Package</div>
            <div class="package-amount">₹1,39,999</div>
            <p class="package-benefit">✓ Both-side full coverage</p>
            <p class="package-benefit">✓ Pre-wedding shoot</p>
            <p class="package-benefit">✓ Full drone coverage</p>
            <p class="package-benefit">✓ Album with 300-350 photos</p>
            <p class="package-benefit">✓ Cinematic video + Teaser + Reels</p>
            <p class="package-benefit">✓ Live video share with projector</p>
            <p class="package-benefit">✓ Live photoshare (Extra benefits)</p>
            <p class="package-benefit">✓ 200+ Edited photo</p>
            <p class="package-benefit">✓ Led photo frame + Premium gifts</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Styles -->
<style>
  .packages-section {
    background-color: #f5f5f5;
    padding: 60px 20px;
  }

  .package-card {
    border-radius: 16px;
    overflow: hidden;
    height: 100%;
    transition: transform 0.3s ease;
  }

  .package-card:hover {
    transform: translateY(-8px);
  }

  .silver-card {
    background-color: #c0c0c0;
    color: #000;
  }

  .gold-card {
    background-color: #ffd700;
    color: #000;
  }

  .platinum-card {
    background-color: #e5e4e2;
    color: #000;
  }

  .package-image-wrapper {
    padding: 0 0 8px 0;
  }

  .package-image {
    width: 100%;
    height: 300px;
    object-fit: cover;
    border-radius: 12px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .package-content {
    padding: 20px;
  }

  .package-title {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 10px;
  }

  .package-amount {
    font-size: 1.2rem;
    margin-bottom: 15px;
  }

  .package-benefit {
    font-size: 0.95rem;
    margin-bottom: 10px;
  }

  /* Offer Section */
  .offer-wrapper {
    background-color: #f6e5e5;
  }

  .offer-title {
    font-size: 3rem;
    font-weight: bold;
    color: #000;
    letter-spacing: 2px;
  }

  .offer-subtext {
    font-size: 1rem;
    color: #555;
    margin-top: 10px;
  }

  .btn-book {
    background-color: #bf3946;
    color: white;
    border: none;
  }

  .btn-book:hover {
    background-color: #bf3946;
  }

 .special-heading {
  background-color: #bf3946;
  color: white;
  padding: 20px;
  border-radius: 12px;
  text-align: center;
  font-size: 1.75rem;
  box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
  margin-bottom: 20px; /* Add margin if not present */
}

  .offer-benefits li {
    color: #222;
    font-size: 1rem;
    margin-bottom: 5px;
  }

  .offer-price-note {
    color: #111;
    font-size: 1rem;
  }

  .transition-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .transition-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
  }

  .glass-card {
    background: rgba(241, 188, 188, 0.85);
    backdrop-filter: blur(5px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 12px;
  }
</style>
